// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("pegawai") // "admin" atau "pegawai"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

model Product {
  id        Int        @id @default(autoincrement())
  name      String
  price     Float
  category  String // cth: "Kopi", "Jus", "Snack"
  imageUrl  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  saleItems SaleItem[]
}

model Sale {
  id            Int        @id @default(autoincrement())
  userId        Int
  subtotal      Float
  total         Float
  discount      Float
  tax           Float
  paymentMethod String     @default("Cash") // <-- TAMBAHKAN BARIS INI
  createdAt     DateTime   @default(now())
  user          User       @relation(fields: [userId], references: [id])
  saleItems     SaleItem[]
}

model SaleItem {
  id        Int     @id @default(autoincrement())
  saleId    Int
  productId Int
  quantity  Int // Pastikan namanya 'quantity'
  price     Float
  sale      Sale    @relation(fields: [saleId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}
