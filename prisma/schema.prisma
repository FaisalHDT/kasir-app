// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("pegawai") // "admin" atau "pegawai"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

model Product {
  id        Int        @id @default(autoincrement())
  name      String
  price     Float
  category  String // cth: "Kopi", "Jus", "Snack"
  imageUrl  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  saleItems SaleItem[]
}

model Sale {
  id        Int        @id @default(autoincrement())
  userId    Int
  total     Float // Total akhir setelah diskon dan pajak
  subtotal  Float // Total harga asli sebelum diskon/pajak
  discount  Float      @default(0)
  tax       Float      @default(0)
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id])
  saleItems SaleItem[]
}

model SaleItem {
  id        Int     @id @default(autoincrement())
  saleId    Int
  productId Int
  quantity  Int
  price     Float // Harga produk saat transaksi
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
}
